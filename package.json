{
  "name": "@hux-js/hux",
  "version": "0.2.0",
  "description": "Hyperfast data management to enable next-gen UX",
  "main": "dist/bundle.umd.min.js",
  "unpkg": "dist/bundle.umd.min.js",
  "scripts": {
    "test": "npm run test:lint && npm run test:unit && npm run test:regression",
    "test:lint": "eslint --fix '{src,test}/**/*.js'",
    "test:unit": "jest --config jest.config.js",
    "test:regression": "./scripts/run-regression-tests.sh",
    "test:regression:verbose": "DEBUG=pw:api jest --config test/regression/__config__/jest.config.js",
    "package": "rollup -c",
    "package-watch": "rollup -c --watch",
    "build": "npm run package",
    "prettier": "prettier --write '{src,test}/**/*.{js,html}'"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@rollup/plugin-babel": "^5.2.2",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "babel-jest": "^26.6.3",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "jest-dev-server": "^4.4.0",
    "lint-staged": "^10.5.3",
    "playwright": "^1.7.0",
    "prettier": "^2.2.0",
    "rollup": "^2.33.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.29.0",
    "serve-handler": "^6.1.3",
    "tslib": "^2.0.3",
    "typescript": "^4.1.3"
  },
  "lint-staged": {
    "{src,test}/**/*.js": [
        "npm run test:lint",
        "npm run prettier",
        "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:unit"
    }
  },
  "author": "Todd Runham",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hux-js/hux.git"
  },
  "homepage": "https://huxjs.org/",
  "keywords": [
    "workers",
    "data",
    "api",
    "hux"
  ],
  "dependencies": {
    "ajv": "^6.12.6",
    "comlink": "^4.3.0",
    "lodash-es": "^4.17.15",
    "uuid": "^8.3.1"
  },
  "files": [
    "dist/"
  ]
}
